<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#009688"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/backArrow"
                android:layout_width="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_backarrow"/>

        </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/myProfile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/savebookmarks"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background"
        android:src="@drawable/images" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/accSetting"
            android:src="@drawable/user_settings"/>
        <ImageView
            android:id="@+id/savebookmarks"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="70dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/bookmark_fill"/>
        <LinearLayout
            android:id="@+id/relLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout1"
            android:background="@drawable/border_bottom_only"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/relLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/myProfile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Juan Cruz"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"/>

            </LinearLayout>
            <RelativeLayout
                android:id="@+id/verifyLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imNotVerify"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="2.1dp"
                    android:layout_toRightOf="@+id/notVerifiedLabel"
                    android:src="@drawable/ic_x"
                    android:visibility="visible"/>
                <TextView
                    android:id="@+id/notVerifiedLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not Verified"
                    android:visibility="visible"/>
                <ImageView
                    android:id="@+id/imVerify"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="2.1dp"
                    android:src="@drawable/ic_verify"
                    android:layout_toRightOf="@+id/verifiedLabel"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/verifiedLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Verified by Admin"
                    android:visibility="gone"/>

            </RelativeLayout>

